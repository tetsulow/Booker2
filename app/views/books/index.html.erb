<div class="container">
  <div class="row">

  <div class="col-lg-4">
   <%= render 'list', user: @user, book: @book %>
  </div>

<div class="col-lg-8">
<h1>Books</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

 <tbody>
<% @books.each do |book| %>
  <tr>
  <td><%= image_tag book.user.get_profile_image("100x100") %></td>
  <td><%= link_to book.title, book_path(book.id) %></td>
  <td><%= book.body %></td>
  </tr>
  <% end %>
 </tbody>
</table>
  </div>
 </div>
</div>
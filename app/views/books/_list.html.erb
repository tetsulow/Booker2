<h2>User info</h2>
<%= image_tag user.get_profile_image("100x100") %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

  <% if user.id == current_user.id %>
   <p><%= link_to "プロフィール編集", edit_user_path(user) %></p>
  <% else %>
   <p><%= link_to "プロフィール編集", user_path(current_user) %></p>
  <% end %>


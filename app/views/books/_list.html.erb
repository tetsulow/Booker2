<h2>User info</h2>
<%= image_tag user.get_profile_image("100x100") %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

  <% if user.id == current_user.id %>
   <p><%= link_to edit_user_path(user) do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
   </p>
  <% else %>
   <p><%= link_to user_path(current_user) do %>
    <i class="fas fa-user-cog"></i>
    <% end %></p>
  <% end %>

<h2>New book</h2>

  <%= form_with model: Book, local:true do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book',class: "btn btn-success" %>
  <% end %>
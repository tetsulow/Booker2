<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

 <tbody>
<% @users.each do |user| %>
  <tr>
  <td></td>
  <td><%= image_tag user.get_profile_image("100x100") %></td>
  <td><%= user.name %></td>
  <td><%= link_to "show", user_path(user.id) %></td>
  </tr>
  <% end %>
 </tbody>
</table>

<%= render 'books/list', user: @user, book: @book %>